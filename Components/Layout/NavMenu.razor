@using Microsoft.AspNetCore.Components.Authorization

<div class="d-flex flex-column flex-shrink-0 text-white bg-dark" style="width: 250px;">
    <a href="" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none px-3 py-3">
        <i class="bi bi-file-earmark-spreadsheet me-2 fs-5"></i>
        <span class="fs-5">勤務報告管理</span>
    </a>
    <hr class="my-0 border-secondary">

    <ul class="nav nav-pills flex-column mb-auto px-2 py-2">
        <li class="nav-item">
            <NavLink class="nav-link text-white" href="" Match="NavLinkMatch.All">
                <i class="bi bi-house-door-fill me-2"></i> Home
            </NavLink>
        </li>
        <li class="nav-item">
            <NavLink class="nav-link text-white" href="upload" Match="NavLinkMatch.All">
                <i class="bi bi-upload me-2"></i> Excelアップロード
            </NavLink>
        </li>

        <li class="nav-item">
            <NavLink class="nav-link text-white" href="attendance" Match="NavLinkMatch.All">
                <i class="bi bi-table me-2"></i> 提出状況一覧
            </NavLink>
        </li>

        <li class="nav-item">
            <NavLink class="nav-link text-white" href="my-attendance" Match="NavLinkMatch.All">
                <i class="bi bi-person-lines-fill me-2"></i> 個人年間サマリー
            </NavLink>
        </li>

        <AuthorizeView Roles="管理者">
            <li class="nav-item mt-3">
                <span class="nav-link text-white-50 small py-1">管理</span>
            </li>
            <li class="nav-item">
                <NavLink class="nav-link text-white" href="admin/users">
                    <i class="bi bi-people me-2"></i> ユーザー管理
                </NavLink>
            </li>
            <li class="nav-item">
                <NavLink class="nav-link text-white" href="admin/groups">
                    <i class="bi bi-diagram-3 me-2"></i> グループ管理
                </NavLink>
            </li>
        </AuthorizeView>

        <li class="nav-item mt-3">
            <span class="nav-link text-white-50 small py-1">設定</span>
        </li>
        <li class="nav-item">
            <NavLink class="nav-link text-white" href="settings/password">
                <i class="bi bi-key me-2"></i> パスワード変更
            </NavLink>
        </li>
    </ul>

    <hr class="my-0 border-secondary">
    <div class="px-2 py-2">
        <a class="nav-link text-white" href="/logout">
            <i class="bi bi-box-arrow-left me-2"></i> ログアウト
        </a>
    </div>
</div>
