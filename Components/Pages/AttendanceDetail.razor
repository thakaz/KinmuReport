@page "/attendance/{empId}/{yearMonth:int}"
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.Authorization
@using KinmuReport
@inject KinmuReport.Models.AttendanceContext DbContext
@inject NavigationManager Navigation


<PageTitle>勤怠明細</PageTitle>

<h2 class="mb-4">
    <i class="bi bi-calendar3 me-2"></i>勤怠明細
</h2>

@if (employee != null)
{
    <div class="card mb-3">
        <div class="card-body">
            <span class="fw-bold me-3">@employee.社員名</span>
            <span class="text-muted">@yearMonth.GetYear()年 @yearMonth.GetMonth()月</span>
        </div>
    </div>

    <div class="card">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover table-sm mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th>勤務日</th>
                            <th>曜日</th>
                            <th>出勤</th>
                            <th>退勤</th>
                            <th class="text-end">所定内</th>
                            <th class="text-end">残業</th>
                            <th class="text-end">深夜</th>
                            <th class="text-end">合計</th>
                            <th>区分</th>
                            <th>備考</th>
							<th class="text-end">通勤費</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var r in mergedRecords)
                        {
                            var dow = r.勤務日.ToDateTime(TimeOnly.MinValue).ToString("ddd");
                            var isWeekend = r.勤務日.DayOfWeek is DayOfWeek.Saturday or DayOfWeek.Sunday;
                            <tr class="@(isWeekend ? "table-secondary" : "")">
                                <td>@r.勤務日.ToString("MM/dd")</td>
                                <td>@dow</td>
                                <td>@r.出勤日時?.ToString("HH:mm")</td>
                                <td>@r.退勤日時?.ToString("HH:mm")</td>
                                <td class="text-end">@r.所定内時間?.ToString("0.00")</td>
                                <td class="text-end">@r.残業時間?.ToString("0.00")</td>
                                <td class="text-end">@r.深夜残業時間?.ToString("0.00")</td>
                                <td class="text-end">@r.合計時間?.ToString("0.00")</td>
                                <td>@r.勤怠区分</td>
                                <td>@r.備考</td>
								<td class="text-end">@r.通勤費?.ToString("N0")</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot class="table-light fw-bold">
                        <tr>
                            <td colspan="4">合計</td>
                            <td class="text-end">@mergedRecords.Sum(r => r.所定内時間 ?? 0).ToString("0.00")</td>
                            <td class="text-end">@mergedRecords.Sum(r => r.残業時間 ?? 0).ToString("0.00")</td>
                            <td class="text-end">@mergedRecords.Sum(r => r.深夜残業時間 ?? 0).ToString("0.00")</td>
                            <td class="text-end">@mergedRecords.Sum(r => r.合計時間 ?? 0).ToString("0.00")</td>
                            <td colspan="2"></td>
							<td class="text-end">@mergedRecords.Sum(r => r.通勤費 ?? 0).ToString("N0")</td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
        <div class="card-footer">
            <button class="btn btn-outline-secondary btn-sm" @onclick="GoBack">
                <i class="bi bi-arrow-left me-1"></i>戻る
            </button>
            <a href="/api/download/@empId/@yearMonth" class="btn btn-primary btn-sm">
                <i class="bi bi-download me-1"></i>原本ダウンロード
            </a>
        </div>
    </div>
}

@code {
    [CascadingParameter] Task<AuthenticationState> AuthState { get; set; } = default!;


    [Parameter] public string empId { get; set; } = "";
    [Parameter] public int yearMonth { get; set; }

    KinmuReport.Models.社員? employee;
    List<MergedRecord> mergedRecords = new();

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthState;
        var user = authState.User;
        var currentUserId = user.FindFirst(ClaimNames.EmployeeId)?.Value ?? "";
        var currentRole = user.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value ?? "";
        var currentGroup = user.FindFirst(ClaimNames.GroupCode)?.Value ?? "";

        // 権限チェック
        var allowed = currentRole switch
        {
            Roles.Admin => true,
            Roles.GroupAdmin => await DbContext.社員s
                .AnyAsync(e => e.社員番号 == empId && e.グループコード == currentGroup),
            _ => empId == currentUserId
        };

        if (!allowed)
        {
            Navigation.NavigateTo("/attendance");
            return;
        }

        employee = await DbContext.社員s.FindAsync(empId);

        var records = await DbContext.勤怠s
            .Where(k => k.社員番号 == empId && k.対象年月 == yearMonth)
            .OrderBy(k => k.勤務日)
            .ToListAsync();

        var commuteRecords = await DbContext.通勤手当s
            .Where(k => k.社員番号 == empId && k.対象年月 == yearMonth)
            .ToListAsync();

        // 通勤手当を日付でDictionary化
        var commuteByDate = commuteRecords.ToDictionary(c => c.日付, c => c.金額);

        // 勤怠と通勤手当をマージ
        mergedRecords = records.Select(r => new MergedRecord
        {
            勤務日 = r.勤務日,
            出勤日時 = r.出勤日時,
            退勤日時 = r.退勤日時,
            所定内時間 = r.所定内時間,
            残業時間 = r.残業時間,
            深夜残業時間 = r.深夜残業時間,
            合計時間 = r.合計時間,
            勤怠区分 = r.勤怠区分,
            備考 = r.備考,
            通勤費 = commuteByDate.TryGetValue(r.勤務日, out var commute) ? commute : null
        }).ToList();
    }


    void GoBack()
    {
        Navigation.NavigateTo("/attendance");
    }

    class MergedRecord
    {
        public DateOnly 勤務日 { get; set; }
        public DateTime? 出勤日時 { get; set; }
        public DateTime? 退勤日時 { get; set; }
        public decimal? 所定内時間 { get; set; }
        public decimal? 残業時間 { get; set; }
        public decimal? 深夜残業時間 { get; set; }
        public decimal? 合計時間 { get; set; }
        public string? 勤怠区分 { get; set; }
        public string? 備考 { get; set; }
        public decimal? 通勤費 { get; set; }
    }
}
