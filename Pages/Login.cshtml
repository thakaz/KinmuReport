@page "/login"
@model KinmuReport.Pages.LoginModel;
@{
    Layout = null;
}

<!doctype html>
<html lang="ja">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>ログイン | 勤務報告書管理</title>
    <link rel="stylesheet" href="@Url.Content("~/lib/bootstrap/dist/css/bootstrap.min.css")" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="@Url.Content("~/app.css")" />
</head>
<body class="login-page d-flex align-items-center py-4">
    <main class="form-signin w-100 m-auto">
        <div class="card shadow-sm">
            <div class="card-body p-4">
                <form method="post">
                    @Html.AntiForgeryToken()

                    <div class="login-icon text-center">
                        <i class="bi bi-file-earmark-spreadsheet text-primary" style="font-size: 3rem;"></i>
                    </div>
                    <h1 class="h5 mb-3 fw-bold text-center">勤務報告書管理</h1>

                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger py-2" role="alert">
                            @Model.ErrorMessage
                        </div>
                    }

                    <div class="mb-3">
                        <label for="loginId" class="form-label">ID</label>
                        <input type="text" class="form-control" id="loginId" name="LoginId" autocomplete="username" required />
                    </div>

                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" class="form-control" id="password" name="Password" autocomplete="current-password" required />
                    </div>

                    <button class="btn btn-primary w-100" type="submit">ログイン</button>

                    <hr class="my-4" />

                    <a href="@Url.Content("~/login-ad")" class="btn btn-outline-secondary w-100">
                        <i class="bi bi-microsoft me-2"></i>Microsoft アカウント
                    </a>
                </form>
            </div>
        </div>
    </main>
</body>
</html>
